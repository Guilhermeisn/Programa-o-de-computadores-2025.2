ano_atual = 2025
ano_nascimento = 2006

idade = ano_atual - ano_nascimento
ano_pass = idade - 1
prox_ano = idade + 1

print('Você tem', idade, 'anos.')
# Usando f strings
print(f'Você tem {idade} anos.')

print('No ano passado, você tinha', ano_pass, 'anos.')
print('No próximo ano, você terá', prox_ano, 'anos.')

print(f'Você nasceu em {ano_nascimento} e tem {idade} anos.')